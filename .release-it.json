{
  "git": {
    "commitMessage": "chore(release): ${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": true,
    "requireBranch": "main"
  },
  "npm": {
    "publish": true
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "assets": [
      "bin/1ls-darwin-arm64",
      "bin/1ls-darwin-x64",
      "bin/1ls-linux-x64",
      "bin/1ls-linux-arm64"
    ]
  },
  "hooks": {
    "before:init": ["bun test", "bun run lint"],
    "after:bump": "bun run build:binary:all"
  }
}
